                                                               FontSize="10"
                                                               Grid.Row="2"
                                                               TextWrapping="Wrap"
                                                               FontFamily="../Assets/Fonts/Roboto-Regular.ttf #Roboto"/>
                                                    <StackPanel Grid.Row="3"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Bottom">
                                                        <Image Source="../Assets/Images/calendar.png"
                                                   Width="14"/>
                                                        <TextBlock Text="5"
                                                       VerticalAlignment="Bottom"
                                                       Margin="5, 0, 0, 0"
                                                       FontSize="13"
                                                       FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto"/>
                                                        <TextBlock Text=" ngày"
                                                       FontSize="10"/>
                                                        <Image Source="../Assets/Images/settings.png"
                                                   Width="14"
                                                   Margin="15, 0, 5, 0"/>
                                                        <TextBlock Text="Sửa"
                                                                   VerticalAlignment="Center"
                                                       FontSize="10"
                                                                   Name="editPlaceBtn"
                                                                   Uid="{Binding Id}"
                                                                   MouseDown="editPlaceBtn_MouseDown"
                                                       TextDecorations="Underline"
                                                       Margin="0, 0, 5, 0"
                                                       FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Style.Triggers>
                                                                        <Trigger Property ="IsMouseOver" Value="True">
                                                                            <Setter Property= "Foreground" Value="#61B3FF"/>
                                                                            <Setter Property="Cursor" Value="Hand" />
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <TextBlock Text="Xóa"
                                                                   Name="removePlaceBtn"
                                                                   Uid="{Binding Id}"
                                                                   MouseDown="removePlaceBtn_MouseDown"
                                                                   TextDecorations="Underline"
                                                                   VerticalAlignment="Center"
                                                                   FontSize="10"
                                                                   FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Style.Triggers>
                                                                        <Trigger Property ="IsMouseOver" Value="True">
                                                                            <Setter Property= "Foreground" Value="#61B3FF"/>
                                                                            <Setter Property="Cursor" Value="Hand" />
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>

                                        </Border>
                                        </DockPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                
                                <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                <Border x:Name="Bd"
                                                        CornerRadius="8"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}"
                                                        SnapsToDevicePixels="True">

                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="IsMouseOver" Value="True"/>

                                                        </MultiTrigger.Conditions>
                                                            <Setter Property="Background"
                                                                TargetName="Bd"
                                                                Value="Transparent"/>

                                                        </MultiTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            </ListView>
                            
                        </Grid>
                        <Grid Background="White" 
                              Grid.Column="1"
                              Margin="15, 0, 0, 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="2.5*" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0"
                                  Background="White"
                                  Margin="0, 0, 0, 5">
                                <Grid Margin="10, 0, 0, 0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid Height="20"
                                          Grid.Row="0">
                                        <TextBlock Text="Bảng Thu" 
                                               DockPanel.Dock="Top"
                                               FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto"/>
                                        
                                    </Grid>
                                    
                                    <Wpf:PieChart Name="donationPie"
                                                  Grid.Row="1"
                                                  LegendLocation="Bottom"
                                                  >
                                        
                                    </Wpf:PieChart>
                                </Grid>
                                
                            </Grid>
                            <Grid Grid.Row="1"
                                  Margin="0, 5, 0, 0"
                                  Background="White">
                                <Grid Margin="10, 0, 0, 0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <TextBlock Text="Bảng Chi"
                                               DockPanel.Dock="Top"
                                               FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto"/>
                                        <Image Source="../Assets/Images/add.png"
                                               Width="20"
                                               Name="addExpenseBtn"
                                               MouseDown="addExpenseBtn_MouseDown"
                                               DockPanel.Dock="Right"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right">
                                            <Image.Style>
                                                <Style TargetType="{x:Type Image}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Cursor" Value="Hand" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Grid>
                                    
                                    <Wpf:PieChart Name="costPie"
                                                  Grid.Row="1"
                                                  LegendLocation="None"
                                                  >

                                    </Wpf:PieChart>
                                </Grid>
                                
                            </Grid>
                            
                            <Grid Grid.Row="2"
                                  >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="20" />
                                </Grid.RowDefinitions>
                                <DockPanel Grid.Row="0" 
                                           Margin="10, 10, 10, 10">
                                    <TextBlock Text="Ảnh chuyến đi"
                                               VerticalAlignment="Center"
                                               FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto"/>
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0, 5, 0, 5"
                                                HorizontalAlignment="Right">
                                        <Button Padding="10, 0, 10, 0"
                                                Name="prevButton"
                                                Click="prevButton_Click"
                                                Style="{StaticResource ImageBorderButton}"
                                                >
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="8"
                                                   VerticalAlignment="Center"
                                                   Height="8"
                                                Source="../Assets/Images/arrowhead-thin-outline-to-the-left.png" />
                                               
                                            </StackPanel>
                                            
                                            
                                        </Button>
                                        <Button Padding="10, 0, 10, 0"
                                                Margin="5, 0, 5, 0"
                                                Name="nextButton"
                                                Click="nextButton_Click"
                                                Style="{StaticResource ImageBorderButton}"
                                                >
                                            <Image Width="8"
                                                   VerticalAlignment="Center"
                                                   Height="8"
                                                Source="../Assets/Images/arrow-point-to-right.png" />

                                        </Button>
                                    </StackPanel>
                                    
                                </DockPanel>
                                <StackPanel Grid.Row="1"
                                            Margin="10, 0, 10, 10">
                                    <Image Source="{Binding ImageToShow.NameImage, Converter={StaticResource converter}}"
                                           VerticalAlignment="Center">
                                        
                                    </Image>

                                </StackPanel>
                                <DockPanel Grid.Row="2"
                                           Margin="10, 0, 10, 0">
                                    <TextBlock Text="Tải ảnh lên"
                                               VerticalAlignment="Bottom"
                                               FontFamily="../Assets/Fonts/Roboto-Italic.ttf #Roboto"/>
                                    <Image HorizontalAlignment="Right" 
                                           VerticalAlignment="Bottom"
                                           Width="40"
                                           Height="30"
                                           Name="uploadImageBtn"
                                           MouseDown="uploadImageBtn_MouseDown"
                                           Source="../Assets/Images/upload_image_1.png">
                                        <Image.Style>
                                            <Style TargetType="{x:Type Image}">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Cursor" Value="Hand" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </DockPanel>

                            </Grid>
                        </Grid>

                    </Grid>
                    <StackPanel Background="#d2d2d2" Grid.Column="1" />
                </Grid>

                

            </Grid>

            <Grid x:Name="navPanel"
                      HorizontalAlignment="Left"
                      Width="65"
                      Background="#EBF4F6">
                <StackPanel>
                    <Grid Height="90">
                        <TextBlock  
                                        Margin="73,0,0,0"
                                        Text="M E N U"
                                        Foreground="Black"
                                        FontSize="22"
                                        Background="Transparent"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource font_style}">
                            
                                <!--// Shadow Effect //-->

                            <TextBlock.Effect>

                                <DropShadowEffect  BlurRadius="10"
                                                       ShadowDepth="1"
                                                       Direction="-90"
                                                       Color="White"/>

                            </TextBlock.Effect>

                        </TextBlock>

                        <ToggleButton VerticalAlignment="Center" 
                                          HorizontalAlignment="Left"
                                          Name="menuToggleButton"
                                          Height="30"
                                          Width="30"
                                          Margin="18, 0, 0 ,0"
                                          BorderThickness="0"
                                          Unchecked="menuToggleButton_Unchecked"
                                          Checked="menuToggleButton_Checked"
                                          Style="{StaticResource tb_style}">
                            <ToggleButton.Background>
                                <ImageBrush ImageSource="../Assets/Images/list_bl.png" Stretch="None" />
                            </ToggleButton.Background>

                            <ToggleButton.Triggers>
                                <EventTrigger RoutedEvent="ToggleButton.Unchecked">

                                    <BeginStoryboard>

                                        <Storyboard x:Name="HideStackPanel">

                                            <DoubleAnimation    
                                                
                                                    Storyboard.TargetName="navPanel"
                                                    Storyboard.TargetProperty="Width"
                                                    BeginTime="0:0:0"
                                                    From="230" To="65"
                                                    Duration="0:0:0.2">

                                            </DoubleAnimation>

                                        </Storyboard>

                                    </BeginStoryboard>

                                </EventTrigger>

                                <EventTrigger RoutedEvent="ToggleButton.Checked">

                                    <BeginStoryboard>

                                        <Storyboard x:Name="ShowStackPanel">

                                            <DoubleAnimation
                                                
                                                    Storyboard.TargetName="navPanel"
                                                    Storyboard.TargetProperty="Width"
                                                    BeginTime="0:0:0"
                                                    From="65" To="230"
                                                    Duration="0:0:0.3">

                                            </DoubleAnimation>

                                        </Storyboard>

                                    </BeginStoryboard>

                                </EventTrigger>
                            </ToggleButton.Triggers>

                        </ToggleButton>
                    </Grid>

                    <ListView  x:Name="LV"
                                   Background="Transparent"
                                   BorderBrush="Transparent"
                                   ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <!--// Home //-->

                        <ListViewItem HorizontalAlignment="Left"
                                          Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter"
                                          >

                            <StackPanel Orientation="Horizontal"
                                            Width="230">

                                <Image Source="../Assets/Images/home_active.png"
                                           Stretch="None"
                                           Margin="12,0,0,0"/>

                                <TextBlock Text="Home"
                                               Margin="25,0,0,0"
                                               Style="{StaticResource font_style}"/>

                            </StackPanel>

                            <!--// Tooltip //-->

                            <ListViewItem.ToolTip>

                                <ToolTip x:Name="tt_home"
                                             Content="Trang chủ"
                                             Style="{StaticResource tt_style}"/>

                            </ListViewItem.ToolTip>

                        </ListViewItem>

                        <!--// Add trip //-->

                        <ListViewItem HorizontalAlignment="Left"
                                          Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter"
                                          >

                            <StackPanel Orientation="Horizontal"
                                            Width="230">

                                <Image Source="../Assets/Images/add_bl.png"
                                           Stretch="None"
                                           Margin="12,0,0,0"/>

                                <TextBlock Text="Thêm chuyến đi"
                                               Margin="25,0,0,0"
                                               Style="{StaticResource font_style}"/>

                            </StackPanel>

                            <!--// Tooltip //-->

                            <ListViewItem.ToolTip>

                                <ToolTip x:Name="tt_adding"
                                             Content="Contacts"
                                             Style="{StaticResource tt_style}"/>

                            </ListViewItem.ToolTip>

                        </ListViewItem>

                        <!--// Settings //-->

                        <ListViewItem HorizontalAlignment="Left"
                                          Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter"
                                          >

                            <StackPanel Orientation="Horizontal"
                                            Width="230">

                                <Image Source="../Assets/Images/settings_bl.png"
                                           Stretch="None"
                                           Margin="12,0,0,0"/>

                                <TextBlock Text="Cài đặt"
                                               Margin="25,0,0,0"
                                               Style="{StaticResource font_style}"/>

                            </StackPanel>

                            <!--// Tooltip //-->

                            <ListViewItem.ToolTip>

                                <ToolTip x:Name="tt_settings"
                                             Content="Messages"
                                             Style="{StaticResource tt_style}"/>

                            </ListViewItem.ToolTip>

                        </ListViewItem>

                        <!--// Info //-->

                        <ListViewItem HorizontalAlignment="Left"
                                          Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter"
                                          >

                            <StackPanel Orientation="Horizontal"
                                            Width="230">

                                <Image Source="../Assets/Images/inf_bl.png"
                                           Stretch="None"
                                           Margin="12,0,0,0"/>

                                <TextBlock Text="Thông tin"
                                               Margin="25,0,0,0"
                                               Style="{StaticResource font_style}"/>

                            </StackPanel>

                            <!--// Tooltip //-->

                            <ListViewItem.ToolTip>

                                <ToolTip x:Name="tt_info"
                                             Content="Maps"
                                             Style="{StaticResource tt_style}"/>

                            </ListViewItem.ToolTip>

                        </ListViewItem>


                        <!--// Listview items style template //-->

                        <ListView.ItemContainerStyle>

                            <Style TargetType="ListViewItem">

                                <Setter Property="Template">

                                    <Setter.Value>

                                        <ControlTemplate TargetType="{x:Type ListViewItem}">

                                            <Border x:Name="Bd"
                                                        Height="50"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}"
                                                        SnapsToDevicePixels="True">

                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                                            </Border>

                                            <ControlTemplate.Triggers>

                                                <MultiTrigger>

                                                    <MultiTrigger.Conditions>

                                                        <Condition Property="IsMouseOver" Value="True"/>

                                                    </MultiTrigger.Conditions>

                                                    <Setter Property="Background"
                                                                TargetName="Bd"
                                                                Value="#A7E5FC"/>
                                                    <Setter Property="Cursor" Value="Hand" />


                                                </MultiTrigger>

                                            </ControlTemplate.Triggers>

                                        </ControlTemplate>

                                    </Setter.Value>

                                </Setter>

                            </Style>

                        </ListView.ItemContainerStyle>

                    </ListView>

                </StackPanel>
            </Grid>


        </Grid>
    </Grid>
</Window>
