                                                                   Margin="0, 3, 0, 0"
                                                                   FontSize="8"
                                                                   FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto"
                                                                   Foreground="#61B3FF"/>
                                                                <TextBlock Text="{Binding End}"
                                                                   HorizontalAlignment="Right"
                                                                   Margin="0, 3, 8, 0"
                                                                   FontSize="8"
                                                                   FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto"
                                                                   Foreground="#61B3FF"/>
                                                            </StackPanel>
                                                    </DockPanel>
                                                    <TextBlock Grid.Row="1"
                                                               Foreground="#61B3FF"
                                                               FontSize="8"
                                                               FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto"
