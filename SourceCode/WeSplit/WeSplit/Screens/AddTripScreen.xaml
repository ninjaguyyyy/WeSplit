<Window x:Class="WeSplit.Screens.AddTripScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeSplit.Screens" xmlns:local1="clr-namespace:WeSplit.Helpers"
        mc:Ignorable="d"
        Title="AddTripScreen"
        Height="620" Width="988"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Loaded="Window_Loaded"
        Background="Transparent"
        >
    <Window.Resources>
        <!--for toggle button-->
        <ImageBrush x:Key="tb_mouse_over"
                    ImageSource="../Assets/Images/list_active.png"/>

        <ImageBrush x:Key="add_member_mouse_over" ImageSource="../Assets/Images/add-friend.png" />

        <Style x:Key="font_style" TargetType="TextBlock">

            <Setter Property="FontFamily"
                    Value="Fonts/Roboto-Light.ttf #Roboto"/>

            <Setter Property="VerticalAlignment"
                    Value="Center"/>

            <Setter Property="HorizontalAlignment"
                    Value="Left"/>

            <Setter Property="Foreground"
                    Value="Black"/>

            <Setter Property="FontSize"
                    Value="20"/>

        </Style>

        

        <Style x:Key="add_member_btn" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="button"
                                BorderThickness="0"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">

                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        TargetName="button"
                                        Value="{StaticResource add_member_mouse_over}"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="vehicle_button" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="button"
                                BorderThickness="0"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="tb_style" TargetType="{x:Type ToggleButton}">

            <Setter Property="Template">

                <Setter.Value>

                    <ControlTemplate TargetType="{x:Type ToggleButton}">

                        <Border  x:Name="border"
                                 BorderThickness="{TemplateBinding BorderThickness}"
                                 Background="{TemplateBinding Background}"
                                 SnapsToDevicePixels="True">

                        </Border>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="true">

                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="{StaticResource tb_mouse_over}"/>

                                <Setter Property="BorderBrush"
                                        TargetName="border"
                                        Value="{StaticResource tb_mouse_over}"/>
                                <Setter Property="Cursor" Value="Hand"/>

                            </Trigger>

                            <Trigger Property="IsChecked" Value="true">

                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="{StaticResource tb_mouse_over}"/>

                                <Setter Property="BorderBrush"
                                        TargetName="border"
                                        Value="{StaticResource tb_mouse_over}"/>

                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>

                </Setter.Value>

            </Setter>

        </Style>

        <Style TargetType="ToolTip" x:Key="tt_style">

            <Setter Property="Placement" Value="Right"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="Background" Value="#4A5668"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="../Assets/Fonts/Roboto-Light.ttf #Roboto"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="PlacementRectangle" Value="60,0,0,0"/>
            <Setter Property="HorizontalOffset" Value="15"/>
            <Setter Property="VerticalOffset" Value="6"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>


        </Style>

        <ImageBrush x:Key="CloseBtn_MouseOver" ImageSource="../Assets/Images/power-button_bl.png"/>

        <Style x:Key="Close_btn" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="button"
                                BorderThickness="0"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        TargetName="button"
                                        Value="{StaticResource CloseBtn_MouseOver}"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">

                            </ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ConfirmButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#00B5E2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="8"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                >
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#115293"/>
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ExpenseButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#00B5E2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="4"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                >
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#115293"/>
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="UploadImage" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#2C9AFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#2C9AFF" 
                                CornerRadius="4"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                >
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#115293"/>
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RemoveImage" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#F7210B"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#F7210B" 
                                CornerRadius="4"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                >
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c82333"/>
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <local1:ImageNameToPathRelative x:Key="relativePathConverter" ></local1:ImageNameToPathRelative>

        <local1:RandomAvatarConverter x:Key="random_avatar" />
        <local1:MoneyUnitConverter x:Key="money_unit" />
    </Window.Resources>

    <Grid Margin="20">
        <Grid Background="Black">

            <Grid x:Name="mainPanel" 
                  PreviewMouseLeftButtonDown="mainPanel_PreviewMouseLeftButtonDown" 
                  Background="White">

            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="1" Grid.Column="1" Margin="0, 0, 0, 10">
                    <TextBlock Text="Thêm chuyến đi" 
                               FontFamily="../Assets/Fonts/Roboto-Black.ttf #Roboto"
                               FontSize="14"/>

                    <Button x:Name="CloseBtn"
                            HorizontalAlignment="Right"
                            Margin="0, 0, 0, 0"
                            Height="20"
                            Width="20"
                            BorderThickness="0"
                            Style="{StaticResource Close_btn}" 
                            Click="CloseBtn_Click">

                        <Button.Background>

                            <ImageBrush ImageSource="../Assets/Images/power-button_red.png"/>

                        </Button.Background>

                    </Button>
                </DockPanel>

                <Grid Grid.Row="2" Grid.Column="1">

                    <Border BorderBrush="#EBF4F6" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="3*" />
                            </Grid.RowDefinitions>


                            <Grid Background="White" Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="1" Background="#EBF4F6" Margin="0, 10, 0, 10" />
                                <DockPanel Grid.Column="0">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Tạo mới"
                                                   FontFamily="../Assets/Fonts/Roboto-Light.ttf #Roboto"
                                                   FontSize="25"
                                                   Foreground="#A6B2BA"/>
                                        <TextBlock Text="Chuyến đi"
                                                   FontFamily="../Assets/Fonts/Roboto-Black.ttf #Roboto"
                                                   FontSize="40"
                                                   Foreground="#2C9AFF"/>
                                    </StackPanel>
                                </DockPanel>
                                <DockPanel Grid.Column="2">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <Image Source="../Assets/Images/bg_3.png" Width="200" />
                                    </StackPanel>
                                </DockPanel>
                                <StackPanel Grid.Column="3"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom">
                                    <Button Height="40"
                                            BorderBrush="#00B5E2"
                                            Foreground="White"
                                            Padding="20, 5, 20, 5"
                                            Name="createButton"
                                            Click="createButton_Click"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource ConfirmButton}"
                                            Margin="10, 0, 10, 10">
                                        
                                        <StackPanel Orientation="Horizontal"
                                                    >
                                            <Image Width="20" 
                                                   Height="20"
                                                   Margin="0, 0, 10, 0"
                                                   Source="../Assets/Images/add_fi.png" />
                                            <TextBlock Text="TẠO CHUYẾN"
                                                       VerticalAlignment="Center"
                                                       FontFamily="../Assets/Fonts/Roboto-Black.ttf #Roboto"/>
                                        </StackPanel>
                                        
                                    </Button>
                                </StackPanel>
                            </Grid>


                            <Grid Background="#F0F3FA" Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Margin="20, 20, 10, 20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="3*" />
                                        <RowDefinition Height="2*" />
                                    </Grid.RowDefinitions>
                                    <Grid Background="White" 
                                          Grid.Row="0" 
                                          Margin="0, 0, 0, 5">
                                        <Grid Margin="10, 0, 10, 8">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="25" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <DockPanel Grid.Row="0" Margin="0, 0, 0, 0">
                                                <TextBlock Text="Thông tin chung" 
                                                           VerticalAlignment="Center"
                                                           FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto"/>
                                            </DockPanel>
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="3*" />
                                                    <ColumnDefinition Width="2" />
                                                    <ColumnDefinition Width="2*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0"
                                                      Margin="10, 0, 10, 0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="3.8*" />
                                                        <RowDefinition Height="2*" />
                                                    </Grid.RowDefinitions>
                                                    <StackPanel Grid.Row="0">
                                                        <Label Content="Tên chuyến"
                                                               FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto"/>
                                                        <TextBox Padding="10, 5, 10, 5"
                                                                 Name="nameTextBox"
                                                                 FontFamily="../Assets/Fonts/Roboto.ttf #Roboto">
                                                            <TextBox.Resources>
                                                                <Style TargetType="{x:Type Border}">
                                                                    <Setter Property="CornerRadius" Value="5"/>
                                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                                </Style>
                                                            </TextBox.Resources>
                                                        </TextBox>
                                                        <DockPanel Margin="5, 8, 0, 0">
                                                            <TextBlock Text="Loại chuyến"
                                                                   FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto"
                                                                   />
                                                            <StackPanel Orientation="Horizontal"
                                                                        DockPanel.Dock="Right"
                                                                        HorizontalAlignment="Right">
                                                                <TextBlock x:Name="displayChosen"
                                                                           Text="{Binding type.Name}"
                                                                           VerticalAlignment="Center"
                                                                           FontSize="11"
                                                                           FontFamily="../Assets/Fonts/Roboto-LightItalic.ttf #Roboto"/>

                                                                <Button Width="20"
                                                                        Height="20"
                                                                        BorderThickness="0"
                                                                        Name="travelTypeButton"
                                                                        Click="travelTypeButton_Click"
                                                                        Margin="8, 0, 0, 0"
                                                                        Style="{StaticResource vehicle_button}">
                                                                    <Button.Background>
                                                                        <ImageBrush ImageSource="../Assets/Images/pyramids.png" />
                                                                    </Button.Background>
                                                                    <Button.ToolTip>
                                                                        Du lịch
                                                                    </Button.ToolTip>
                                                                </Button>
                                                                <Button Width="20"
                                                                        Height="20"
                                                                        BorderThickness="0"
                                                                        Name="workTypeButton"
                                                                        Click="workTypeButton_Click"
                                                                        Margin="8, 0, 0, 0"
                                                                        Style="{StaticResource vehicle_button}">
                                                                    <Button.Background>
                                                                        <ImageBrush ImageSource="../Assets/Images/shovel.png" />
                                                                    </Button.Background>
                                                                    <Button.ToolTip>
                                                                        Làm việc
                                                                    </Button.ToolTip>
                                                                </Button>
                                                            </StackPanel>
                                                        </DockPanel>

                                                        <DockPanel Margin="5, 8, 0, 0">
                                                            <TextBlock Text="Tình trạng"
                                                                   FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto"
                                                                   />
                                                            <StackPanel Orientation="Horizontal"
                                                                        DockPanel.Dock="Right"
                                                                        HorizontalAlignment="Right">
                                                                <TextBlock x:Name="statusChosen"
                                                                           Text="{Binding status}"
                                                                           VerticalAlignment="Center"
                                                                           FontSize="11"
                                                                           FontFamily="../Assets/Fonts/Roboto-LightItalic.ttf #Roboto"/>

                                                                <Button Width="20"
                                                                        Height="20"
                                                                        BorderThickness="0"
                                                                        Name="progressStatusButton"
                                                                        Click="progressStatusButton_Click"
                                                                        Margin="8, 0, 0, 0"
                                                                        Style="{StaticResource vehicle_button}">
                                                                    <Button.Background>
                                                                        <ImageBrush ImageSource="../Assets/Images/project.png" />
                                                                    </Button.Background>
                                                                    <Button.ToolTip>
                                                                        Đang/Sắp đi
                                                                    </Button.ToolTip>
                                                                </Button>
                                                                <Button Width="20"
                                                                        Height="20"
                                                                        BorderThickness="0"
                                                                        Name="finishStatusButton"
                                                                        Click="finishStatusButton_Click"
                                                                        Margin="8, 0, 0, 0"
                                                                        Style="{StaticResource vehicle_button}">
                                                                    <Button.Background>
                                                                        <ImageBrush ImageSource="../Assets/Images/flag.png" />
                                                                    </Button.Background>
                                                                    <Button.ToolTip>
                                                                        Đã kết thúc
                                                                    </Button.ToolTip>
                                                                </Button>
                                                            </StackPanel>
                                                        </DockPanel>
                                                    </StackPanel>
                                                    
                                                    <Grid Grid.Row="1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="1*" />
                                                            <ColumnDefinition Width="5" />
                                                            <ColumnDefinition Width="1*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="30" />
                                                            <RowDefinition Height="25" />
                                                        </Grid.RowDefinitions>
                                                        <StackPanel Grid.Row="0"
                                                                    Orientation="Horizontal"
                                                                    Grid.Column="0">
                                                            <Label Content="Ngày đi"
                                                                   FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto"
                                                            />
                                                            <Label Content="(mm/dd/yyy)"
                                                                   Foreground="#b1b1b1"
                                                                   FontSize="11"/>
                                                        </StackPanel>
                                                        
                                                        <DatePicker Grid.Row="1"
                                                                    Name="startDatePicker"
                                                                    Grid.Column="0"
                                                                    >
                                                            
                                                        </DatePicker>
                                                        <StackPanel Grid.Row="0"
                                                                    Orientation="Horizontal"
                                                                    Grid.Column="2">
                                                            <Label Content="Ngày về"
                                                               FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto"
                                                            />
                                                            <Label Content="(mm/dd/yyy)"
                                                                   Foreground="#b1b1b1"
                                                                   FontSize="11"/>
                                                        </StackPanel>
                                                        
                                                        <DatePicker Grid.Row="1"
                                                                    Name="endDatePicker"
                                                                    Grid.Column="2">
                                                            
                                                        </DatePicker>
                                                    </Grid>
                                                    
                                                </Grid>
                                                <StackPanel Grid.Column="1" 
                                                            Background="#b1b1b1"/>
                                                <Grid Grid.Column="2"
                                                      Margin="10, 3, 10, 0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="20" />
                                                        <RowDefinition Height="30" />
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>
                                                    <TextBlock Text="Phương tiện di chuyển"
                                                               FontFamily="../Assets/Fonts/Roboto-Bold.ttf #Roboto"
                                                               Grid.Row="0"/>
                                                    <StackPanel Orientation="Horizontal"
                                                                Grid.Row="1"
                                                                HorizontalAlignment="Center">
                                                        <Button Width="30"
                                                                Height="30"
                                                                BorderThickness="0"
                                                                Style="{StaticResource vehicle_button}">
                                                            <Button.Background>
                                                                <ImageBrush ImageSource="{Binding transport.NameImage, Converter={StaticResource relativePathConverter}}" />
                                                            </Button.Background>
                                                        </Button>
                                                    </StackPanel>
                                                    <Border Grid.Row="2"
                                                            Margin="0, 3, 0, 0"
                                                            BorderThickness="1"
                                                            BorderBrush="Gray"
                                                            Padding="5, 3, 5, 0">
                                                        <WrapPanel>
                                                            <Button Width="30"
                                                                    Height="30"
                                                                    Tag="t2"
                                                                    Click="ChooseTransport_Button_Click"
                                                                    BorderThickness="0"
                                                                    Margin="3, 2, 3, 2"
                                                                    Style="{StaticResource vehicle_button}">
                                                                <Button.Background>
                                                                    <ImageBrush ImageSource="../Assets/Images/car.png" />
                                                                </Button.Background>
                                                                <Button.ToolTip>
                                                                    Ô tô
                                                                </Button.ToolTip>
                                                            </Button>
                                                            <Button Width="30"
                                                                    Height="30"
                                                                    Click="ChooseTransport_Button_Click"
                                                                    Tag="t3"
                                                                    BorderThickness="0"
                                                                    Margin="3, 2, 3, 2"
                                                                    Style="{StaticResource vehicle_button}">
                                                                <Button.Background>
                                                                    <ImageBrush ImageSource="../Assets/Images/motobike.png" />
                                                                </Button.Background>
                                                                <Button.ToolTip>
                                                                    Xe máy
                                                                </Button.ToolTip>
                                                            </Button>
                                                            <Button Width="30"
                                                                    Height="30"
                                                                    Tag="t1"
                                                                    BorderThickness="0"
                                                                    Click="ChooseTransport_Button_Click"
                                                                    Margin="3, 2, 3, 2"
                                                                    Style="{StaticResource vehicle_button}">
                                                                <Button.Background>
                                                                    <ImageBrush ImageSource="../Assets/Images/bike.png" />
                                                                </Button.Background>
                                                                <Button.ToolTip>
                                                                    Xe đạp
                                                                </Button.ToolTip>
                                                            </Button>
                                                            <Button Width="30"
                                                                    Tag="t9"
                                                                    Height="30"
                                                                    BorderThickness="0"
                                                                    Click="ChooseTransport_Button_Click"
                                                                    Margin="3, 2, 3, 2"
                                                                    Style="{StaticResource vehicle_button}">
                                                                <Button.Background>
                                                                    <ImageBrush ImageSource="../Assets/Images/plane.png" />
                                                                </Button.Background>
                                                                <Button.ToolTip>
                                                                    Máy bay
                                                                </Button.ToolTip>
                                                            </Button>
                                                            <Button Width="30"
                                                                    Tag="t7"
                                                                    Height="30"
                                                                    BorderThickness="0"
                                                                    Click="ChooseTransport_Button_Click"
                                                                    Margin="3, 2, 3, 2"
                                                                    Style="{StaticResource vehicle_button}">
                                                                <Button.Background>
                                                                    <ImageBrush ImageSource="../Assets/Images/coach.png" />
                                                                </Button.Background>
                                                                <Button.ToolTip>
                                                                    Xe khách
                                                                </Button.ToolTip>
                                                            </Button>
                                                            <Button Width="30"
                                                                    Tag="t6"
                                                                    Height="30"
                                                                    BorderThickness="0"
                                                                    Click="ChooseTransport_Button_Click"
                                                                    Margin="3, 2, 3, 2"
                                                                    Style="{StaticResource vehicle_button}">
                                                                <Button.Background>
                                                                    <ImageBrush ImageSource="../Assets/Images/foot.png" />
                                                                </Button.Background>
                                                                <Button.ToolTip>
                                                                    Đi bộ
                                                                </Button.ToolTip>
                                                            </Button>
                                                            <Button Width="30"
                                                                    Tag="t4"
                                                                    Height="30"
                                                                    BorderThickness="0"
                                                                    Click="ChooseTransport_Button_Click"
                                                                    Margin="3, 2, 3, 2"
                                                                    Style="{StaticResource vehicle_button}">
                                                                <Button.Background>
                                                                    <ImageBrush ImageSource="../Assets/Images/train.png" />
                                                                </Button.Background>
                                                                <Button.ToolTip>
                                                                    Tàu hỏa
                                                                </Button.ToolTip>
                                                            </Button>
                                                            <Button Width="30"
                                                                    Tag="t5"
                                                                    Height="30"
                                                                    BorderThickness="0"
                                                                    Click="ChooseTransport_Button_Click"
                                                                    Margin="3, 2, 3, 2"
                                                                    Style="{StaticResource vehicle_button}">
                                                                <Button.Background>
                                                                    <ImageBrush ImageSource="../Assets/Images/ship.png" />
                                                                </Button.Background>
                                                                <Button.ToolTip>
                                                                    Tàu thủy
                                                                </Button.ToolTip>
